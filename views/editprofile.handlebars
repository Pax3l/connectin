<div class="container editprofile-container">
  <h1 class="text-center">Edit your profile</h1>
  <hr class="registration-hr">
  <div class="row">
    <form name="editprofile" action="/editprofile" method="post">

    <div class="col-md-6">
        <div class="form-group">
          <label for="age">Education:</label>
          <input type="text" class="form-control" id="education" placeholder="Enter education" name="education">
        </div>
        <div class="form-group">
          <label for="password">Occupation:</label>
          <input type="text" class="form-control" id="password" placeholder="Enter occupation" name="occupation">
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
          <label for="age">Address:</label>
          <input type="text" class="form-control" id="age" placeholder="Enter address" name="address">
        </div>
        <div class="form-group">
          <label for="password">Interests:</label>
          <input type="text" class="form-control" id="password" placeholder="Enter interests" name="interests">
        </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <label for="status">Status</label>
        <textarea class="form-control" rows="3" name="status"></textarea>
      </div>
    </div>

    <div class="col-md-12">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>

  </form>
  </div>
</div>
